# --- Application Server ---
PORT=8080

# --- Database (App) ---
DB_URL=jdbc:postgresql://localhost:5432/metering
DB_USER=metering
DB_PASSWORD=metering

# --- Database (Docker Compose) ---
POSTGRES_DB=metering
POSTGRES_USER=metering
POSTGRES_PASSWORD=metering

# --- Security (Demo) ---
DEMO_SECURITY_BASIC_ENABLED=false

# --- Billing ---
BILLING_SCALE=2
BILLING_ROUNDING_MODE=HALF_UP

# --- Integrations ---
INTEGRATION_ENABLED=true
INTEGRATION_OFFLINE_HOURS=24
JIRA_BASE_URL=http://localhost:8081
ERP_BASE_URL=http://localhost:8082

# Copy this file to ".env" and adjust if needed.

# --- CORS ---
CORS_ALLOWED_ORIGINS=https://brunata-metering-demo.onrender.com,http://localhost:8080,http://localhost:8081,http://localhost:8082
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS,HEAD
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# --- Tests (Testcontainers overrides) ---
TEST_POSTGRES_IMAGE=postgres:16
TEST_DB_NAME=metering
TEST_DB_USER=metering
TEST_DB_PASSWORD=metering
